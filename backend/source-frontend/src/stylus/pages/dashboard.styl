.dashboard
  height 100%
  display flex

.side-menu
  display flex
  flex-direction column
  border-right 1px solid $border-main
  width 220px
  padding 16px 23px
  background-color #fff
  position relative

  #mobileMenuBtn
    display none
    position absolute
    right -20px
    top calc(50% - 20px)
    width 40px
    height 40px
    background-color rgb(253, 96, 96)
    justify-content center
    align-items center
    border-radius 50%
    cursor pointer

  header 
    display flex
    align-items center
    justify-content space-between

  footer
    .sign__user-name
      display inline-block
      margin-bottom 10px
    
    .sign__out-link
      display inline-block
      margin-bottom 15px

  .dashboard__nav-wrapper
    flex 1

    .button-dashboard
      margin-top 18px
      margin-bottom 15px

  .dashboard__nav
    margin-top 15px
    margin-bottom 10px

    > li
      border-bottom 1.5px solid rgba(222, 222, 222, 0.5)

      &:last-child
        border-bottom none

      a
        display block
        color $second-color
        padding 14px 2px
        transition color .3s
        cursor pointer

        &:hover
          color $fifts-color
        
        &.dashboard__sub-link
          padding 8px 2px
          border none

      .dashboard__sub-nav
        margin-left 20px
        display none

        li:first-child a
          padding-top 0

      &.active
        > a
          color $fifts-color

        .dashboard__sub-nav
          display block

          .active
            a
              color $fifts-color

      &:hover
        .dashboard__sub-nav
          display block

.dashboard__content-space
  padding 26px 11px
  flex 1
  overflow-y auto

  .dashboard__header-bar
    display flex
    justify-content space-between
    align-items center
    margin-bottom 26px

    .filter
      display flex
      align-items center

      > span 
        display flex
        align-items center
        margin-right 15px

        svg 
          margin-right 12px

      .custom-select
        width 258px

        >span 
          display inline-block
          width 100%

.post-edit__wrapper
  position absolute
  background-color rgba(0, 0, 0, 0.4)
  top 0
  right 0
  bottom 0
  left 0
  z-index 2
  display none
  justify-content center
  align-items center

  .post-edit__body
    background #FFF
    border-radius 20px
    width 100%
    margin 15px
    padding 20px
    max-width 445px
    min-width 290px

    .post-edit__el-container
      display flex
      justify-content space-between
      align-items center
      margin-bottom 10px

      &--title
        >input
          flex 1

      &--hand
        align-items center 

        input[type="text"]
          width 57px
          margin-right 10px

        button
          border none 
          background-color transparent
          outline none
          padding 0
          margin 0 4px
          cursor pointer
        
        svg 
          margin-right 15px

      &--team
        >svg 
          margin-right 10px!important

        .custom-select
          flex 1

      &--clock
        justify-content flex-end

        .datetimepicker-wrapper
          margin-right 10px
          flex 1

          .flatpickr-wrapper
            width 100%

          .date
            width 100%

        .de
          margin 0 5px

        .time
          width 60px

      &--check
        justify-content flex-start

        >svg 
          margin-right 17px!important
          margin-left 2px

      >svg 
        margin-right 15px
        
  .post-edit__footer
    display flex
    justify-content flex-end
    margin-top 20px

    .button-tr
      margin-right 15px


.job-items
  min-height 150px
  >div
    padding 0 7.5px
    margin-bottom 10px

  .job-item__wrapper
    display flex
    flex-direction column
    position relative
    background #FFF
    box-shadow 0px 5px 10px rgba(0, 0, 0, 0.15)
    border-radius 20px
    padding 18px 14px

    &--ready
      opacity .7

      &.active
        opacity 1

    &--urgent
      background-color #FFDBDB

      .job-item__edit, .job-item__confirm
        background-color #FFDBDB!important

    >span 
      position absolute
      top 11px
      right 10px

    header 
      display flex
      align-items flex-start
      margin-bottom 15px

      >svg 
        margin-right 10px
        cursor pointer

      p
        padding-right 12px
        flex 1

    .job-item
      flex 1
      position relative
      z-index 0

      ul
        li
          margin-bottom 15px
          display flex
          align-items center

          &:first-child
            >svg  
              margin-right 12px

          &:nth-child(2)
            >svg  
              margin-right 8px

          &:nth-child(3)
            >svg  
              margin 0 10px 0 2px
          
          &:nth-child(4)
            >svg  
              margin 0 9px 0 4px

          &:last-child
            margin-bottom 0

      .job-item__edit
        display flex
        flex-direction column
        align-items center
        justify-content center
        position absolute
        z-index 1
        top 0
        right 0
        left 0
        bottom 0
        background-color rgb(255, 255, 255)

        .button.job-edit
          margin-bottom 9px

      .job-item__confirm
        display flex
        flex-direction column
        position absolute
        align-items center
        z-index 1
        top 0
        right 0
        left 0
        bottom 0
        background-color rgb(255, 255, 255)

        p
          margin 18px 0 27px

        .button
          min-width 90px
          margin 0 5px

.completed-job__header
  margin-top 20px
  margin-bottom 25px
  
  >svg
    margin-right 10px

  >span 
    font-weight 500


@media screen and (max-width: 768px)
  .side-menu
    position absolute
    z-index 1
    top 0
    left -212px
    bottom 0

    #mobileMenuBtn
      display flex

    &.active
      left 0
    

@media screen and (max-width: 545px)
  .dashboard__content-space
    padding 26px 0

    .dashboard__header-bar
      align-items flex-start

      .filter
        display flex
        flex-direction column
        align-items flex-end

        > span 
          margin-bottom 10px
          margin-right 0
  
  .job-items>div
    padding 0 15px

@media screen and (max-width: 445px)
  .dashboard__content-space
    .dashboard__header-bar
      align-items flex-start
      flex-direction column

      .filter
        align-items flex-start
        width 100%

        > span 
          margin-bottom 10px
          margin-right 0

        .custom-select
          width 100%

      #createJob
        order 1
        margin-top 15px
    
@media screen and (max-width: 364px)
  .post-edit__el-container--hand
    flex-wrap wrap

    >div:first-child
      width 100%
      margin-bottom 10px

    >div:last-child
      margin-left 28px

    
      