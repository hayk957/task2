.login-form__wrapper
  display flex
  height 100%

.login-form
  display flex
  flex-direction column
  align-items center
  justify-content center
  margin auto
  width 100%
  padding 40px 15px
  max-width 559px

  .login
    margin-bottom 28px

  .login-form__head
    text-align center
    margin-bottom 64px

  .login-form__title
    text-align center
    margin-bottom 18px

  .login-form__form
    display flex
    flex-direction column
    align-items center
    width 100%

    input
      &[type="text"],
      &[type="password"]
        background $bg-second
        box-shadow inset 4px 4px 10px $sh-second
        border none
        padding 20px 17px 18px
        border-radius 5px
        width 100%
        margin-bottom 22px
        outline none

    .login-form__options
      width 100%
      display flex
      justify-content space-between
      margin-top 12px

    .button
      margin-top 55px


  