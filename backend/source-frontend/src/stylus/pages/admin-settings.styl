.admin-settings__header
  margin-bottom 25px

.general-setting-wrapper
  margin-bottom 10px

  > div
    margin-bottom 10px
    padding 0 7.5px

  .element__cont
    padding 20px 28px
    background-color #fff
    box-shadow 0px 5px 10px rgba(0, 0, 0, 0.15)
    border-radius 15px

    .header
      font-weight 500
      font-size 16px
      margin-bottom 20px

    .sub-header
      margin-bottom 20px

    .setting-btn
      margin-bottom 14px

    .input 
      display flex
      align-items center
      width 58px
      margin-right 10px

      input 
        background-color transparent
        border none
        outline none
        width 70%

    button.counter-btn
      border none
      background-color rgba(0, 0, 0, 0)
      outline none
      padding 0
      margin 0 4px
      cursor pointer


.block-mac-head-wrapper
  margin-bottom 25px

  .input
    margin-right 16px

  > div
    padding 0 7.5px

#block-mac-wrapper
  > div
    padding 0 7.5px

  .element__cont
    background #FFFFFF
    box-shadow 0px 5px 10px rgba(0, 0, 0, 0.15)
    border-radius 15px
    padding 14px
    position relative
    margin-bottom 10px

    .close-el
      position absolute
      right 14px
      top 14px
      cursor pointer

    .font-3
      padding-right 15px

@media screen and (max-width: 545px)
  .general-setting-wrapper
    > div
      padding 0 15px

  .block-mac-head-wrapper
    > div
      padding 0 15px

  #block-mac-wrapper
    > div
      padding 0 15px


@media screen and (max-width: 385px)
  .block-mac-head-wrapper
    > div
    
      .input
        margin-bottom 10px
        width 100%

      #addMac
        align-self flex-end