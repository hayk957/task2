.venue__header-bar
  margin-top 4px
  margin-bottom 26px

  #post-photos
    display none

#venue-map
  .element__wrapper
    margin-bottom 10px

    .element__cont
      position relative
      background-color #fff
      border-radius 20px
      box-shadow 0px 5px 10px rgba(0, 0, 0, 0.15)

      .close-el
        position absolute
        right 14px
        top 14px
        cursor pointer

      header
        padding 20px 24px

        p
          white-space nowrap
          text-overflow ellipsis
          padding-right 10px
          overflow hidden

      .element__image-wrapper
        margin-bottom 28px
        display inline-block
        width 100%
        overflow hidden

        img 
          width 100%
          height auto
          display block

