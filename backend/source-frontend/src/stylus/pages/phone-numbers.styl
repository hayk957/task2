#phone-numbers
  > section
    padding 0 7.5px
    margin-bottom 10px


    .element__cont
      background rgb(255, 255, 255)
      box-shadow 0 5px 10px rgba(0,0,0,.15)
      border-radius 15px
      padding 20px 14px
      position relative

      span
        position absolute
        right 14px
        top 14px
        cursor pointer
    
      ul
        li
          display flex
          align-items flex-start
          margin-bottom 15px

          &:last-child
            margin-bottom 0

          svg 
            margin-right 10px

          &:first-child
            svg 
              margin-right 12px

          .font-1
            font-weight 500
            font-size 18px
            line-height 1

      .element__option
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        background-color #fff
        padding 14px
        display flex
        flex-direction column
        align-items center
        border-radius 15px

        p
          margin-bottom 10px

        > div
          width 100%
          display flex
          justify-content center

          .button
            width 96px
            min-width initial
            margin 0 4px

    
@media screen and (max-width: 545px)
  #phone-numbers
    > section
      padding 0 15px